params {
    get_covid_cases_py = "${COVID_SCRIPTS}/get_covid_cases_from_api.py"
    seqbox_cmd_py = "${SEQBOX_SCRIPTS}/seqbox_cmd.py"
    file_inhandling_py = "${SEQBOX_SCRIPTS}/seqbox_filehandling.py"
    make_seqbox_input_py = "${COVID_SCRIPTS}/make_sequencing_seqbox_input.py"
    infiles = "${HOME}/data/seqbox/infiles"
    minknow = "/var/lib/minknow/data/SARS_CoV2_20210701/no_sample/20210701_1420_MN33881_FAO36609_5c3b1ea9"
    gpu2_seqbox_config = "${HOME}/Documents/scripts/seqbox_configs/mlw_gpu2_seqbox_config.yaml"
    run = "${HOME}/data/minion_runs/20210701_1420_MN33881_FAO36609_5c3b1ea9"
    work = "${run}/work"
    owner = "bkutambe:bkutambe"
}

env.artic_covid_medaka_py = "${COVID_SCRIPTS}/artic_covid_medaka.py"
env.today = new Date().format('yyyy.MM.dd')
env.SEQ_OUTPUT_DIR = "${HOME}/data/seqbox/infiles/${env.today}"
env.work = "${HOME}/data/minion_runs/20210701_1420_MN33881_FAO36609_5c3b1ea9/work"
env.WORKDIR="${HOME}/data/minion_runs"
env.DATABASE_URL = "${DATABASE_URL}"
env.PYTHONPATH = "${PYTHONPATH}"
env.BATCH = "20210701_1420_MN33881_FAO36609_5c3b1ea9"
env.SEQTRACKER = "${env.WORKDIR}/20210701_1420_MN33881_FAO36609_5c3b1ea9.csv"

env.WORKFLOW="medaka"
env.PROFILE="manual"

process {
  withLabel:guppy {
    container = 'genomicpariscentre/guppy-gpu'
    containerOptions = '--gpus all'
  }

  withLabel:seqbox {
    conda = "${HOME}/miniconda3/envs/seqbox"
  }

  withName:artic {
    conda = "${HOME}/miniconda3/envs/artic_new10"
  }

  withName:pangolin {
    conda = "${HOME}/miniconda3/envs/pangolin"
  }
}

docker {
	enabled = true
  temp = "${env.WORKDIR}/${env.BATCH}"
  docker.runOptions = '-u $(id -u):$(id -g)'
}